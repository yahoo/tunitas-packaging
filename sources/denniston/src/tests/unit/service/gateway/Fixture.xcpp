  auto Fixture::test_usage_Gateway() -> void {
#if 1
    auto exercise = [](auto &world) {
      // nothing to do but watch it shut down
      require(ASSERTION);
    };
    operate<Supervisor<library::Gateway>>(exercise);
#else
    auto super = operate<Supervisor<library::Gateway>>();
    super.stop();
    require(ASSERTION);
#endif
  }
  auto Fixture::test_usage_Gather() -> void {
    auto subject = library::Gather{};
    require(ASSERTION, sizeof (subject));
  }
  auto Fixture::test_usage_Boot() -> void {
#if 1
    // This is somewhat pedantic and specious because the Gateway already runs Boot, Tasks & Job
    // The new subprocess MUST be pushed into the subprocesses list; it CANNOT be left floating.
    // The subprocess MUST get notified on shutdown as the top-level process terminates from graceful_shutdown.
    auto exercise = [](auto &world) {
      auto &ref{world.ref()};
      ref.subprocesses.spawn(sublibrary::make<sublibrary::Boot>(ref));
      require(ASSERTION);
    };
    operate<Supervisor<library::Gateway>>(exercise);
#else
    auto super = supervise<library::Gateway>();
    auto &ref{super.ref()};
    ref.subprocesses.spawn(sublibrary::make<sublibrary::Boot>(ref));
    super.stop();
    require(ASSERTION);
#endif
  }

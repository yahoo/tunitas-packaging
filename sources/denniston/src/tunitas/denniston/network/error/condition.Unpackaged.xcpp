#divert <fpp>
namespace tunitas::denniston::network::error::condition {
  //
  // The Unpackaged Error Conditions of Tunitas Denniston Network.
  //
  // Usage:
  //
  //   std::error_condition ec(BAD, error::category());
  //   std::cout << ec.message();
  //
  struct Unpackaged {
    enum class Enumeration {
      SUCCESS, // ........ improper success (which is a failure)
      FAILURE, // ........ sic, generic failure
    };
    using enum Enumeration;
  };
}
#import std.is_error_condition_enum.tunitas.denniston.network.error.condition.Unpackaged.Enumeration // enable that certain magic template constructor
#endiv
#divert <hpp>
#import std.error_condition
#import std.underlying_type
namespace tunitas::denniston::network::error::condition {
  inline auto make_error_condition(Unpackaged::Enumeration) noexcept -> std::error_condition;
  inline constexpr auto underlying(Unpackaged::Enumeration e) noexcept { return std::underlying_type_t<Unpackaged::Enumeration>(e); }
}
#endiv
#divert <ipp>
#import tunitas.denniston.network.error.category
namespace tunitas::denniston::network::error {
  auto condition::make_error_condition(Unpackaged::Enumeration e) noexcept -> std::error_condition { return {underlying(e), category()}; }
}
#endiv

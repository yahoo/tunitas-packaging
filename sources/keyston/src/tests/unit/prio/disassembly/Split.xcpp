#divert <hpp>
#import tests.unit.prio.disassembly.Prototype
#import tunitas.octets.required.Fixed
#import tunitas.keyston.prio.Codec
namespace tests::unit::prio {
  template<required::Definition DEFINITION> class disassembly::Split : public rigging::suite::Fixture, protected Prototype {
    using Ancestor = Prototype;
  public:
    static auto suite() -> Suite;
    //
    using Definition = DEFINITION;
    using Encoded = typename ::tunitas::keyston::prio::Codec<Definition::PRIO>::Encoded;
    //
    auto test_call() -> void;
  protected:
    // fill with something obvious (but deterministic)
    template<::tunitas::octets::required::Fixed BUFFER> static auto generate() -> BUFFER;
  };
}

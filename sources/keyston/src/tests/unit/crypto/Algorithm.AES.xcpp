#divert <hpp>
#import tests.unit.crypto.Palette
#import tunitas.keyston.crypto.algorithm.Algorithm.AES
namespace tests::unit::crypto {
  template<> struct Algorithm<library::Algorithm<AES>> : public rigging::suite::Fixture, protected Palette {
    static auto suite() -> Suite;
    template<Size WIDTH> struct Function;
    //
    using Subject = library::Algorithm<AES>;
    inline static constexpr auto WIDTH = 16uz; // this can only be AES::BLOCKSIZE (16)
    using Block = library::Block<WIDTH>;
    //
    auto test_constructor() -> void;
    auto test_operator_call() -> void;
  };
}
#endiv
#divert <cpp>
#import tests.unit.crypto.Algorithm.AES.Function
namespace tests::unit::crypto {
  auto Algorithm<library::Algorithm<AES>>::suite() -> Suite {
    auto series = Stream{typeid(Subject)};
    series << add("constructor", &Algorithm::test_constructor)
           << add("operator()",  &Algorithm::test_operator_call)
           << add<Function<WIDTH>>()
           << END;
    return settle(series);
  }
  auto Algorithm<library::Algorithm<AES>>::test_constructor() -> void {
    auto subject = Subject{};
    require(ASSERTION, sizeof(subject));
  }
  auto Algorithm<library::Algorithm<AES>>::test_operator_call() -> void {
    auto subject = Subject{};
    auto got = subject(generate_buffer<Block>(), generate_buffer<Block>());
    dump(std::cerr, got);
  }
}
#endiv

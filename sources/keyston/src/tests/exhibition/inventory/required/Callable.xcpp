#import std.ostream
namespace tests::exhibition::inventory::required {
  //
  // IS this FUNCTION argument suitable for Function<FUNCTION>?
  //
  template<typename FUNCTION> concept Callable = requires {
    // Is it a function?
    // does it return void?
    // does it accept an ostream & as its first argument?
    []<typename... TYPES>(void (*)(std::ostream &, TYPES...)) {}(static_cast<FUNCTION *>(nullptr));
  };

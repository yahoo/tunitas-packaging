#divert <fpp>
#forward tunitas.array.Fixed
#forward tunitas.octets.Fixed
#import tunitas.octets.Octet
namespace tunitas::octets::required::array {
  //
  // A fixed array of octets?
  // Because we diagnose this without the complete type of FIXED, we cannot rely upon inheritance or derived_from
  //
  namespace [[eponymous]] fixed {
    template<typename FIXED> concept Old = requires(FIXED) {
      { []<Size EXTENT>(tunitas::array::Fixed<octets::Octet, EXTENT> *)
        {}(static_cast<FIXED *>(nullptr)) };
    };
    template<typename FIXED> concept New = requires(FIXED) {
      { []<Size EXTENT>(tunitas::octets::Fixed<EXTENT> *)
        {}(static_cast<FIXED *>(nullptr)) };
    };
    template<typename FIXED> concept Fixed = Old<FIXED> || New<FIXED>;
  }
  using fixed::Fixed;
}
#endiv
#divert <cpp>
#import tunitas.array.Fixed
#import tunitas.octets.Fixed
namespace {
  namespace testate {
    namespace required = tunitas::octets::required;
    static_assert(required::array::Fixed<tunitas::octets::Fixed<1uz>>);
    static_assert(required::array::Fixed<tunitas::array::Fixed<tunitas::octets::Octet, 1uz>>);
  }
}
#endiv

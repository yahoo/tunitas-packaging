    using Prefixes = measurement::Limits<measurement::Prefixes>;
    struct Prefix {
      struct Length {
        using Value = std::size_t;
        inline static constexpr auto min() -> Value;
        inline static constexpr auto max() -> Value;
      };
    };
  };
}

  namespace [[eponymous]] seed {
    // always octets but may be size 0uz
    template<required::Definition DEFINITION, Size THE_SIZE> struct Sized;
  }
  template<required::Definition DEFINITION> using Seed = seed::Sized<DEFINITION, DEFINITION::Amplifier::Seed::SIZE.count()>;
}

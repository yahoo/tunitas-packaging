#divert <hpp>
#import tunitas.view.Fixed
#import tunitas.octets.Fixed
namespace tunitas::keyston::prio::role {
  template<required::Definition DEFINITION, Size THE_SIZE> struct seed::Sized {
    inline static constexpr auto const SIZE = THE_SIZE;
    using Storage = octets::Fixed<SIZE>;
    struct View {
      using Fixed = view::Fixed<Octet, SIZE>;
    };
  };
}
#endiv

  template<array::required::Arrayable TYPE, array::Size CAPACITY> auto array::swap(Fixed<TYPE, CAPACITY> &a, Fixed<TYPE, CAPACITY> &b) noexcept -> void {
    typename Fixed<TYPE, CAPACITY>::Ancestor &aa{a}, &bb{b};

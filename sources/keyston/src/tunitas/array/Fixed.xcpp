    template<required::Arrayable T, Size CAPACITY> template<Size SUBCAPACITY>                    constexpr Fixed<T,CAPACITY>::operator View<SUBCAPACITY>() const                                                   { return View<SUBCAPACITY>{Ancestor::data(), Ancestor::size()}; }

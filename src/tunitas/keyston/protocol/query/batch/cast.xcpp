#divert <ipp>
#import tunitas.keyston.protocol.exception.Cast
#import tunitas.keyston.protocol.query.traits.Cast
#import tunitas.keyston.protocol.query.batch.Batch
#import tunitas.keyston.protocol.query.batch.Record
#import tunitas.keyston.protocol.query.Visitor
#import tunitas.variant.visit
#import nonstd.exception.Unreachable
#import nonstd.required.Pointer
#import nonstd.required.Reference
namespace tunitas::keyston::protocol::query::batch::package_cast {
  template<required::Queryable EXACT> auto interface::is(Batch const &candidate) -> bool {
    auto visitor = Visitor{[](EXACT const &) { return true; },
                           [](auto const &)  { return false; }};
    return visit(visitor, candidate);
  }
  auto interface::is_reserved(Batch const &candidate) -> bool      { return is<Record<Type::RESERVED>>(candidate); }
  auto interface::is_time_interval(Batch const &candidate) -> bool { return is<Record<Type::TIME_INTERVAL>>(candidate); }
  auto interface::is_fixed_size(Batch const &candidate) -> bool    { return is<Record<Type::FIXED_SIZE>>(candidate); }
  auto interface::is_valid(Batch const &candidate) -> bool {
    auto visitor = Visitor{[](Record<Type::RESERVED> const &)      { return true; },
                           [](Record<Type::TIME_INTERVAL> const &) { return true; },
                           [](Record<Type::FIXED_SIZE> const &)    { return true; },
                           [](auto const &)                        { return false; }};
    return visit(visitor, candidate);
  }
  template<typename RESULT> auto interface::cast(Batch const &candidate) -> RESULT requires required::Castable<RESULT> { return conjugate<Conjugations<Batch const>, RESULT>(candidate); }
  template<typename RESULT> auto interface::cast(Batch &candidate) -> RESULT requires required::Castable<RESULT>       { return conjugate<Conjugations<Batch>, RESULT>(candidate); }
  template<typename CONJUGATIONS, typename RESULT, typename VARIANT> auto body::conjugate(VARIANT &candidate) -> RESULT {
    using Actual = typename traits::Cast<RESULT>::Basis;
    if constexpr (required::Pointer<RESULT>) {
      return visit(pointer::Selector<RESULT, Actual, CONJUGATIONS>{}, candidate);
    } else if constexpr (required::Reference<RESULT>) {
      return visit(reference::Selector<RESULT, Actual, CONJUGATIONS>{}, candidate);
    } else {
      throw exception::Unreachable{};
    }
  }
}

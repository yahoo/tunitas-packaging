#divert <fpp>
namespace tunitas::keyston::protocol::function {
  //
  // The aggragation parameter as known to the VDAF
  //
  // Specification:
  //
  //   I-D.irtf-cfrg-vdaf
  //   https://www.ietf.org/archive/id/draft-irtf-cfrg-vdaf-03.html
  //   Verifiable Distributed Aggregation Function
  //
  //   https://ietf-wg-ppm.github.io/draft-ietf-ppm-dap/draft-ietf-ppm-dap.html
  //   Section 4. Protocol Definition
  //
  // Design:
  //
  //   None.
  //
  // Usage:
  //
  //   It's opaque, get it?
  //
  struct Parameters;
}
#endiv
#divert <hpp>
#import tunitas.keyston.Opaque
namespace tunitas::keyston::protocol {
  namespace function {
    using std::move;
    inline auto swap(Parameters &, Parameters &) noexcept -> void;
  }
  struct function::Parameters : public Opaque<(1uz<<16)> {
    using Ancestor = Opaque<(1uz<<16)>;
    friend auto swap(Parameters &, Parameters &) noexcept -> void;
  public:
    Parameters() = default;
    using Ancestor::Bounded; // you "just have to know" that the ancestor's constructor is named thus.
  };
}
#endiv
#divert <ipp>
namespace tunitas::keyston::protocol {
  auto function::swap(Parameters &a, Parameters &b) noexcept -> void {
    Parameters::Ancestor &aa{a}, &bb{b};
    swap(aa, bb);
  }
}
#endiv

#divert <fpp>
namespace tunitas::keyston::protocol {
  //
  // The named roles of the system.
  //
  // Specification
  //
  //   https://ietf-wg-ppm.github.io/draft-ietf-ppm-dap/draft-ietf-ppm-dap.html
  //   Section 4. Protocol Definition
  //
  // Design:
  //
  //   An enum (class).
  //
  // USage:
  //
  //   You need a tutorial on how to use an enum (class)?  o.rly?
  //
  enum class Role : std::uint8_t {
    COLLECTOR,
    CLIENT,
    GATEWAY,
    PROCESSOR,
    // The specifications are varied in how they name these roles.  We provide aliases.
    LEADER = GATEWAY,
    HELPER = PROCESSOR,
  };
}
#endiv
#divert <hpp>
#import std.underlying_type
namespace tunitas::keyston::protocol {
  inline constexpr auto underlying(Role r) { return std::underlying_type_t<Role>(r); }
}
#endiv

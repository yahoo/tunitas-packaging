#divert <hpp>
#import tunitas.keyston.daf.generic.configuration.required.Configuration
#import tunitas.keyston.daf.generic.configuration.usage.Core
namespace tunitas::keyston::daf::generic::configuration::usage {
  //
  // Is this CONFIGURATION sufficient?
  // Requires the complete type of CONFIGURATION
  //
  template<typename CONFIGURATION> concept Configuration = required::Configuration<CONFIGURATION> && requires(CONFIGURATION) {
    // DO NOT ---> requires Core<CONFIGURATION>; <--- DO NOT (it creates a cycle)
    //
    typename CONFIGURATION::Disassembled;
    typename CONFIGURATION::Disassembly;
    //
    typename CONFIGURATION::Computed;
    typename CONFIGURATION::Computation;
    //
    typename CONFIGURATION::Amalgamated;
    typename CONFIGURATION::Amalgamation;
    //
    typename CONFIGURATION::Reassembled;
    typename CONFIGURATION::Reassembly;
  };
}
#endiv

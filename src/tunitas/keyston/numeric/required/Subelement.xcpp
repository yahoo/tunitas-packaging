#divert <fpp>
#import tunitas.integer.required.Unsigned // ... appears as integer::Unsigned
#import tunitas.integer.required.Small // ...... appears as integer::Small
namespace tunitas::keyston::numeric::required {
  //
  // A subelement in the numeric "field" is an (unsigned) "small integer" that is used to create a bigger one.
  //    allowed: uint128_t expects to be compiler-managed.
  // disallowed: uint256_t expects to be library-managed.
  //
  template<typename INTEGER> concept Subelement = integer::Small<INTEGER> && integer::Unsigned<INTEGER>;;
}
#endiv
#divert <cpp>
#import tunitas.keyston.integer
namespace {
  namespace testate {
    using namespace tunitas::keyston::integer;
    namespace required = tunitas::keyston::numeric::required;
    //
    static_assert(required::Subelement<uint8_t>);
    static_assert(required::Subelement<uint16_t>);
    static_assert(required::Subelement<uint32_t>);
    static_assert(required::Subelement<uint64_t>);
    static_assert(required::Subelement<uint128_t>);
    static_assert(!required::Subelement<uint256_t>);
    static_assert(!required::Subelement<uint512_t>);
  }
}
#endiv

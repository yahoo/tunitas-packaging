#divert <fpp>
namespace tunitas::keyston::measurement {
  //
  // What even is a measurement specimen?
  //
  // Specification:
  //
  //   I-D.irtf-cfrg-vdaf
  //   https://www.ietf.org/archive/id/draft-irtf-cfrg-vdaf-03.html
  //   Verifiable Distributed Aggregation Function
  //
  //   A number in Z (mod m)
  //
  // Design:
  //
  //   They have a data type for that in C++23.
  // 
  // Usage:
  //
  //   auto measured = Specimen{99u};
  //
  enum class Specimen : std::uint64_t;
}
#endiv
#divert <hpp>
#import std.underlying_type
namespace tunitas::keyston::measurement {
  inline constexpr auto underlying(Specimen c) { return std::underlying_type_t<Specimen>(c); }
  inline auto swap(Specimen &a, Specimen &b) noexcept -> void { std::swap(a, b); }
}
#endiv

#endiv
#divert <hpp>
#import tunitas.keyston.time.Point
#import tunitas.keyston.time.Duration
namespace tunitas::keyston {
  namespace time {
    using std::move;
    inline auto swap(Interval &, Interval &) noexcept -> void;
  }
  struct time::Interval {
    Point start{};
    Duration duration{};
  };
}
#endiv
#divert <ipp>
namespace tunitas::keyston {
  auto time::swap(Interval &a, Interval &b) noexcept -> void{
    swap(a.start, b.start);
    swap(a.duration, b.duration);
  }
}
#endiv

#divert <ipp>
namespace tunitas::keyston::hpke {
  auto configuration::swap(Configuration<SECRET> &a, Configuration<SECRET> &b) noexcept -> void {
    Configuration<SECRET>::Ancestor &aa{a}, &bb{b};
    swap(aa, bb);
    swap(a.keys, b.keys);
  }
  namespace configuration {
    Configuration<SECRET>::Configuration(Ancestor const &a, Bundle b)
      : Ancestor{a}
      , keys{move(b)}
    { }
    Configuration<SECRET>::Configuration(id::Configuration conf, id::KEM kem, id::KDF kdf, id::AEAD aead, Bundle bundle)
      : Ancestor{conf, kem, kdf, aead}
      , keys{move(bundle)}
    { }
    Configuration<SECRET>::Configuration(id::Configuration conf, id::KEM kem, id::KDF kdf, id::AEAD aead, Key<PUBLIC> publick, Key<SECRET> sekrit)
      : Ancestor{conf, kem, kdf, aead}
      , keys{move(publick), move(sekrit)}
    { }
    Configuration<SECRET>::Configuration(id::Configuration conf, id::KEM kem, id::KDF kdf, id::AEAD aead, Key<SECRET> sekrit, Key<PUBLIC> publick)
      : Ancestor{conf, kem, kdf, aead}
      , keys{move(publick), move(sekrit)}
    { }
  }
}

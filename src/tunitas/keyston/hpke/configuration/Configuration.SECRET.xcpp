#import tunitas.keyston.hpke.configuration.Basis
#import tunitas.keyston.hpke.key.Bundle
#import tunitas.keyston.hpke.Key
namespace tunitas::keyston::hpke {
  namespace configuration {
    using std::move;
    inline auto swap(Configuration<SECRET> &, Configuration<SECRET> &) noexcept -> void;
  }
  template<> class configuration::Configuration<configuration::SECRET> : public Basis  {
    using Ancestor = Basis;
    friend auto swap(Configuration<SECRET> &, Configuration<SECRET> &) noexcept -> void;
  public:
    using Bundle = key::Bundle<key::Secret, key::Public>;
    Bundle keys{};
    [[implicit]] Configuration() = default;
    inline [[implicit]] Configuration(Ancestor const &, Bundle);
    inline [[implicit]] Configuration(id::Configuration, id::KEM, id::KDF, id::AEAD, Bundle);
    inline [[implicit]] Configuration(id::Configuration, id::KEM, id::KDF, id::AEAD, Key<PUBLIC>, Key<SECRET>);
    inline [[implicit]] Configuration(id::Configuration, id::KEM, id::KDF, id::AEAD, Key<SECRET>, Key<PUBLIC>);
  };
}

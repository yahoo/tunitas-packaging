#divert <fpp>
namespace tunitas::keyston::hpke {
  //
  // All the ciphertext.
  //
  // Specification:
  //
  //   RFC 9180
  //   https://www.ietf.org/rfc/rfc9180.html
  //
  //   https://ietf-wg-ppm.github.io/draft-ietf-ppm-dap/draft-ietf-ppm-dap.html
  //   Section 4. Protocol Definition
  //
  // Design:
  //
  //   Obvious.
  //   Use designated initialization.
  //

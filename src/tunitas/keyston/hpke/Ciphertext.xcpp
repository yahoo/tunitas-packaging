  //
  //   Yes.
  //
  struct Ciphertext;
}
#endiv
#divert <hpp>
#import tunitas.keyston.hpke.id
#import tunitas.keyston.Opaque
namespace tunitas::keyston {
  namespace hpke {
    using std::move;
    inline auto swap(Ciphertext &, Ciphertext &) noexcept -> void;
  }
  struct hpke::Ciphertext {
    id::Configuration id{};
    Opaque<(1uz<<16)> enc{};
    Opaque<(1uz<<32)> payload{};
  };
}
#endiv
#divert <ipp>
namespace tunitas::keyston {
  auto hpke::swap(Ciphertext &a, Ciphertext &b) noexcept -> void {
    swap(a.id, b.id);
    swap(a.enc, b.enc);
    swap(a.payload, b.payload);
  }
}
#endiv

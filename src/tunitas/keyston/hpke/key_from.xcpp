#divert <hpp>
#import tunitas.keyston.hpke.Configuration
namespace tunitas::keyston::hpke {
  //
  // Get the Key from an HPKE Confguration
  //
  // Specification:
  //
  //   As expected by denniston::dictionary::Dictionary<...>
  //
  // Design:
  //
  //   The key_from(...) function MUST be in this namespace so that ADL wil find it.
  //   The key_from(...) function MUSt return a constie reference to the key within the value
  //
  // Usage:
  //
  //   Obvious.
  //   But see denniston::dictionary::usage::Key_From
  //
  inline auto key_from(Configuration const &) -> id::Configuration const &;
}
#endiv
#divert <ipp>
namespace tunitas::keyston {
  auto hpke::key_from(Configuration const &cfg) -> id::Configuration const & { return cfg.id; };
}

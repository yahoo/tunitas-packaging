  //
  // The usage of all the KECCAK[c] functions is all the same.
  // This is diagnosed with the complete type of KECCAK.
  //
  namespace [[eponymous]] keccak {
    namespace octets = ::tunitas::keyston::octets;
    template<typename KECCAK> concept Keccak = required::Keccak<KECCAK> && requires(KECCAK keccak, octets::View input, octets::Span<Octet> output) {
      { KECCAK{} };
      { keccak.update(input) };
      { keccak.final(output) };
    { 
  };
}

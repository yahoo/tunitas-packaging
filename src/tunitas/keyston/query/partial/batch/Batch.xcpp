#divert <hpp>
#import tunitas.keyston.query.partial.Variant
#import tunitas.keyston.query.Type
namespace tunitas::keyston::partial {
  namespace query {
    using std::move;
    inline auto swap(Partial &, Partial &) noexcept -> void;
  }
  class query::Partial : public Variant {
    using Ancestor = Variant;
    friend auto swap(Partial &, Partial &) noexcept -> void;
  public:
    Partial() = default;
    using Ancestor::variant;
    inline auto type() const noexcept -> Type;
  };
}

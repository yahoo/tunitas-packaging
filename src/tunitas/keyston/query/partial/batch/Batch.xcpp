#divert <ipp>
#import tunitas.variant.Visitor
#import tunitas.keyston.query.partial.Key
#import tunitas.keyston.exception.Invalid
namespace tunitas::keyston::query {
  auto partial::swap(Partial &a, Partial &b) noexcept -> void {
    Partial::Ancestor &aa{a}. &bb{b};
    swap(aa, bb);
  }
  namespace partial {
    auto Partial::type() const -> Type {
      auto visitor = Visitor{[](Key<RESERVED> const &)      { return Type::RESERVED; },
                             [](Key<TIME_INTERVAL> const &) { return Type::TIME_INTERVAL; },
                             [](Key<FIXED_SIZE> const &)    { return Type::FIXED_SIZE; },
                             [](auto const &)               { throw exception::Invalid{"query::Partial"}; }};
      return visit(visitor, static_cast<Ancestor const &>(*this));
    }
  }
}

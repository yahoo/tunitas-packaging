#divert <hpp>
#import tunitas.keyston.query.batch.Variant
#import tunitas.keyston.query.Type
#import tunitas.variant.Visitor
namespace tunitas::keyston::query {
  namespace batch {
    using std::move;
    inline auto swap(Batch &, Batch &) noexcept -> void;
  }
  class batch::Batch : public Variant {
    using Ancestor = Variant;
    friend auto swap(Batch &, Batch &) noexcept -> void;
    template<typename... THUNKS> using Visitor = tunitas::variant::Visitor<THUNKS...>;
  public:
    Batch() = default;
    using Ancestor::variant;
    inline auto type() const -> Type;
  };
}

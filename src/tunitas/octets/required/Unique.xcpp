#divert <fpp>
#forward tunitas.octets.Unique
namespace tunitas::octets::required {
  //
  // Is type this a unique (octets)?
  //
  // Specification:
  //
  //   Oh come on! Look. At. It.
  //
  // Design:
  //
  //   This is required::InstanceOf<...> as copy-pasta.
  //   Arguably it should be supplied as part of octets::required::Unique<...>>
  //
  //  Usage:
  //
  //   You know how it works.
  //
  template<typename UNIQUE> concept Unique = requires(UNIQUE) {
    { []<Size SIZE, typename STAMP>(Unique<SIZE, STAMP> *)
      {} (static_cast<UNIQUE *>(nullptr)) };
  };
}

    static_assert(not std::is_move_constructible_v<System>);
    static_assert(not std::is_copy_assignable_v<System>);
    static_assert(not std::is_move_assignable_v<System>);
    static_assert(not std::is_swappable_v<System>);
  }
}
#endiv

  template<required::Keyable K, required::Indexable I, required::Valuable V> template<typename SELF> auto Concurrent<K,I,V>::access(SELF &self, Index index) {
    Guard guard{self.variables};
    using Result = std::conditional_t<std::is_const_v<SELF>, Found<Value const>, Found<Value>>;
    auto uindex = underlying(index);
    if (uindex < self.corpus.size()) {
      return Result{move(guard), self.corpus.at(uindex)}; // need to duplicate the bounds check(?)
    } else {
      return Result{};
    }
  }
  template<required::Keyable K, required::Indexable I, required::Valuable V> auto Concurrent<K,I,V>::at(Index index) const -> Found<Value const> { return access(*this, index); }
  template<required::Keyable K, required::Indexable I, required::Valuable V> auto Concurrent<K,I,V>::at(Index index) -> Found<Value>             { return access(*this, index); }
  template<required::Keyable K, required::Indexable I, required::Valuable V> template<typename SELF> auto Concurrent<K,I,V>::search(SELF &self, Key const &key) {
    Guard guard{self.variables};
    using Result = std::conditional_t<std::is_const_v<SELF>, Found<Value const>, Found<Value>>;
    auto const end = self.corpus.end();
    auto const found = std::find_if(self.corpus.begin(), end, [&key](auto const &item) { return key_from(item) == key; });
    if (end == found) {
      return Result{};
    } else {
      return Result{move(guard), *found};
    }
  }
  template<required::Keyable K, required::Indexable I, required::Valuable V> auto Concurrent<K,I,V>::find(Key const &key) const -> Found<Value const> { return search(*this, key); }
  template<required::Keyable K, required::Indexable I, required::Valuable V> auto Concurrent<K,I,V>::find(Key const &key) -> Found<Value>             { return search(*this, key); }

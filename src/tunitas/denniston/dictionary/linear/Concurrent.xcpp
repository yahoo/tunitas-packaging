  template<required::Keyable K, required::Indexable I, required::Valuable V> template<typename SELF> auto Concurrent<K,I,V>::range(this SELF *self) const -> nonstd::like_t<SELF, Range<Concurrent, Iterator<Concurrent>>> { return {Guard{self->variables}, *self}; }
  template<required::Keyable K, required::Indexable I, required::Valuable V> template<typename SELF> auto Concurrent<K,I,V>::start(this SELF *) -> nonstd::like_t<SELF, Range<Concurrent, Iterator<Concurrent>>> { return self->corpus.begin(); }
  template<required::Keyable K, required::Indexable I, required::Valuable V> template<typename SELF> auto Concurrent<K,I,V>::finish(this SELF *) -> nonstd::like_t<SELF, Range<Concurrent, Iterator<Concurrent>>> { return self->corpus.end(); }

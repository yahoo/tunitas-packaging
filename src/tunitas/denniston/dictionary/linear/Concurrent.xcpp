namespace tunitas::denniston::dictionary::linear {
  template<required::Keyable K, required::Indexable I, required::Valuable V> auto Concurrent<K,I,V>::empty() const -> bool {
    Guard guard{variables};
    return corpus.empty();
  }
  template<required::Keyable K, required::Indexable I, required::Valuable V> auto Concurrent<K,I,V>::size() const -> Size {
    Guard guard{variables};
    return corpus.size();
  }
  template<required::Keyable K, required::Indexable I, required::Valuable V> auto Concurrent<K,I,V>::insert(Value noob) -> Inserted {
    Guard guard{variables};
    auto const &key = key_from(noob);
    auto const end = corpus.end();
    auto const found = std::find_if(corpus.begin(), end, [&key](auto const &item) { return key_from(item) == key; });
    if (end == found) {
      corpus.push_back(move(noob));
      return {move(guard), *prev(corpus.end()), true};
    } else {
      return {move(guard), *found, false};
    }
  }
  template<required::Keyable K, required::Indexable I, required::Valuable V> auto Concurrent<K,I,V>::contains(Key const &key) const -> bool {
    Guard guard{variables};
    auto const end = corpus.end();
    auto const found = std::find_if(corpus.begin(), end, [&key](auto const &item) { return key_from(item) == key; });
    return end != found;
  }
#if 202312 < __cplusplus
  template<required::Keyable K, required::Indexable I, required::Valuable V> template<typename SELF> auto Concurrent<K,I,V>::at(this SELF *self, Index index) -> nonstd::like_t<SELF, Found<Value>> {
    Guard guard{self->variables};
    if (index < self->corpus.size()) {
      return {move(guard), self->corpus.at(index)}; // need to duplicate the bounds check(?)
    } else {
      return {};

#divert <fpp>
#import tunitas.denniston.protocol.packet.Request.template
namespace tunitas::denniston::protocol::packet {
  //
  // Semantic:
  //
  //   The request from the gateway to a processor to perform the continuation step.
  //   Will appear the service::instance::Processor
  //
  // Design:
  //
  //  The manifest constructors in lieu of aggregate or designated constructors allows make<...>(...) to work.
  //
  // Usage:
  //
  //   auto req = keyston::protocol::continuation::Request{...somehow...};
  //
  //   auto made = make<Request<CONTINUATION>>(move(req));
  //
  template<> struct Request<Post::CONTINUATION>;
}
#endiv
#divert <hpp>
#import tunitas.denniston.protocol.packet.Prototype
#import tunitas.keyston.protocol.continuation.Request
namespace tunitas::denniston::protocol::packet {
  template<> struct Request<Post::CONTINUATION> : public Prototype {
    using Payload = keyston::protocol::continuation::Request;
    Payload payload{};
    inline explicit Request(Payload p) : payload{move(p)} { }
  };
}
#endiv

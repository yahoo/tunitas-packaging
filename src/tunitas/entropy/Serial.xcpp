  inline auto draw() -> Draw { return ++serial; } // never returns 0
  explicit Serial() = default;
protected:
  static Draw serial;
};
#endiv
#divert <cpp>
namespace tunitas::entropy {
  Serial::Draw Serial::serial{};
}

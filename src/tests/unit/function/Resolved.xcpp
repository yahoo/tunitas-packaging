auto tests::unit::function::Resolved::suite() -> Suite {
  auto series = Stream{"Resolved"sv};
  series << add("constructor", &Resolved::test_constructor)
         << []{
             auto tos = Stream{"to_string"sv};
             tos << []{
                     auto opt = Stream{"Optional"sv};
                     opt << add("good", &Resolved::test_to_string_good<by::Optional>)
                         << add("fail", &Resolved::test_to_string_fail<by::Optional>)
                         << END;
                     return opt;
                   }()
                 << []{
                     auto out = Stream{"Outcome"sv};
                     out << add("good", &Resolved::test_to_string_good<by::Outcome>)
                         << add("fail", &Resolved::test_to_string_fail<by::Outcome>)
                         << END;
                     return out;
                   }()
                 << []{
                     auto exc = Stream{"Exception"sv};
                     exc << add("good", &Resolved::test_to_string_good<by::Exception>)
                         << add("fail", &Resolved::test_to_string_fail<by::Exception>)
                         << END;
                     return exc;
                   }()
                 << END;
             return tos;
           }()
         << []{
             auto tos = Stream{"to_string_view"sv};
             tos << []{
                     auto opt = Stream{"Optional"sv};
                     opt << add("good", &Resolved::test_to_string_view_good<by::Optional>)
                         << add("fail", &Resolved::test_to_string_view_fail<by::Optional>)
                         << END;
                     return opt;
                   }()
                 << []{
                     auto out = Stream{"Outcome"sv};
                     out << add("good", &Resolved::test_to_string_view_good<by::Outcome>)
                         << add("fail", &Resolved::test_to_string_view_fail<by::Outcome>)
                         << END;
                     return out;
                   }()
                 << []{
                     auto exc = Stream{"Exception"sv};
                     exc << add("good", &Resolved::test_to_string_view_good<by::Exception>)
                         << add("fail", &Resolved::test_to_string_view_fail<by::Exception>)
                         << END;
                     return exc;
                   }()
                 << END;
             return tos;
           }()
         << END;
  return settle(series);
}
namespace tests::unit::function {
  auto Resolved::test_constructor() -> void {
    auto subject = Subject{};
    require(ASSERTION, sizeof(subject));
  }
}
#endiv

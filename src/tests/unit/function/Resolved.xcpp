#divert <fpp>
namespace tests::unit::function { class Resolved; }
#endiv
#divert <hpp>
#import tunitas.alambique.function.Resolved
#import tunitas.error.by.required.Indicator
#import tunitas.exception.Aspect
#import tests.unit.function.Palette
struct tests::unit::function::Resolved : public rigging::suite::Fixture {
  static auto suite() -> Suite;
  //
  using Subject = library::Resolved;
  using AF = Palette<library::Mode::AF>;
  using DAF = Palette<library::Mode::DAF>;
  using VDAF = Palette<library::Mode::VDAF>;
#if 0 // not yet
  using VIDAF = Palette<library::Mode::VIDAF>;
#endif
  //
  auto test_constructor() -> void;
  template<by::required::Indicator> auto test_to_string_good() -> void;
  template<by::required::Indicator> auto test_to_string_fail() -> void;
  template<by::required::Indicator> auto test_to_string_view_good() -> void;
  template<by::required::Indicator> auto test_to_string_view_fail() -> void;
protected:
  using Failure = ::tunitas::exception::Aspect;
};
#endiv
#divert <cpp>
//
// Specializations go first so that the suite() function can see t hem
//
namespace tests::unit::function {
  template<> auto Resolved::test_to_string_good<by::Optional>() -> void {
    auto specimen = Subject{AF::GOOD};
    auto subject = to_string(OPTIONAL, specimen);
    require(ASSERTION, true == (bool) subject);
    require(ASSERTION, "ZERO"sv == *subject);
  }
  template<> auto Resolved::test_to_string_fail<by::Optional>() -> void {
    auto specimen = Subject{AF::FAIL};
    auto subject = to_string(OPTIONAL, specimen);
    require(ASSERTION, false == (bool) subject);
  }
  template<> auto Resolved::test_to_string_good<by::Outcome>() -> void {
    auto specimen = Subject{DAF::GOOD};
    auto subject = to_string(OUTCOME, specimen);
    require(ASSERTION, good(subject));
    require(ASSERTION, "ZERO"sv == value(subject));
  }
  template<> auto Resolved::test_to_string_fail<by::Outcome>() -> void {
    auto specimen = Subject{DAF::FAIL};
    auto subject = to_string(OUTCOME, specimen);
    require(ASSERTION, fail(subject));
  }
  template<> auto Resolved::test_to_string_good<by::Exception>() -> void {
    auto specimen = Subject{VDAF::GOOD};
    auto subject = to_string(EXCEPTION, specimen);
    require(ASSERTION, "ZERO"sv == subject);
  }
  template<> auto Resolved::test_to_string_fail<by::Exception>() -> void try {
    auto specimen = Subject{VDAF::FAIL};
    to_string(EXCEPTION, specimen);
    impossible(ASSERTION);
  } catch (Failure const &) {
    require(ASSERTION);
  }
}

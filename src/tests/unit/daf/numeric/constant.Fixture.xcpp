#import tests.unit.daf.numeric.constant.Fixture.Provided
#import tests.unit.daf.numeric.constant.Fixture.Expected
namespace tests::unit::daf::numeric::constant {
  auto Fixture::test_disassembly_good() -> void {
    using Provided = Fixture::Provided::Disassembly;
    using Expected = Fixture::Expected::Disassembly;
    auto expected = Expected{};
    //
    auto parameters = Configuration::Parameters{};
    auto measurement = Configuration::Measurement<WHOLE>{Provided::CANARY};
    auto randomness = Configuration::Randomness{};
    auto [publick, inputs] = library::disassembly(parameters, measurement, randomness);
    //
    require(ASSERTION, sizeof(publick)); // don't care what it is
    require(ASSERTION, Expected::CANARY == visit(expected.treatment, inputs.at(0_shard)));
    require(ASSERTION, Expected::ZERO == visit(expected.treatment, inputs.at(1_shard)));
  }
  auto Fixture::test_computation_good() -> void {
    using Provided = Fixture::Provided::Computation;
    using Expected = Fixture::Expected::Computation;
    auto expected = Expected{};
    //
    auto parameters = Configuration::Parameters{};
    auto publick = Configuration::Public<SHARE>{};
    auto input = Configuration::Input<SHARE>{Provided::CANARY};
    auto output = library::computation(parameters, 0_shard, publick, input);
    //
    require(ASSERTION, visit(expected.otreatment, output) == visit(expected.itreatment, input));
  }
  auto Fixture::test_amalgamation_empty() -> void try {
    using Expected = Fixture::Expected::Amalgamation;
    auto expected = Expected{};
    //
    auto parameters = Configuration::Parameters{};
    auto outputs = Series<Configuration::Output<SHARE>>{}; // <-------------------- empty, see?
    auto amalgamated = library::amalgamation(parameters, outputs);
    //
    require(ASSERTION, Expected::ZERO == visit(expected.treatment, amalgamated));
  } catch (Exception::Invariant const &) {
    require(ASSERTION);
  }
  auto Fixture::test_amalgamation_good() -> void {
    using Provided = Fixture::Provided::Amalgamation;
    using Expected = Fixture::Expected::Amalgamation;
    auto expected = Expected{};
    //
    auto parameters = Configuration::Parameters{};
    auto outputs = []{
      auto output = Configuration::Output<SHARE>{Provided::CANARY};
      return Series<Configuration::Output<SHARE>>{output, output, output};
    }();
    auto amalgamated = library::amalgamation(parameters, outputs);
    require(ASSERTION, Expected::CANARY == visit(expected.treatment, amalgamated));
  }
  auto Fixture::test_amalgamation_fail() -> void try {
    using Provided = Fixture::Provided::Amalgamation;
    using Expected = Fixture::Expected::Amalgamation;
    auto expected = Expected{};
    //
    auto parameters = Configuration::Parameters{};
    auto outputs = []{
      auto smaller = Configuration::Output<SHARE>{Provided::CANARY};
      auto bigger = Configuration::Output<SHARE>{Provided::OTHER};
      // whereas the modular vectors do not have operator>, we must rely on operator!= for consistency
      // so herein we will find that the "last one wins" -------------------\\\\\\\ (here)
      //                                                                    |||||||
      //                                                                    vvvvvvv
      return Series<Configuration::Output<SHARE>>{smaller, smaller, bigger, smaller};
    }();
    //
    // reminder: this won't (can't) fail by exception, rather it just returns 'bigger'
    auto amalgamated = library::amalgamation(parameters, outputs);
    //
    //                           ///////------------------------------ "last one wins"
    //                           |||||||
    //                           vvvvvvv
    require(ASSERTION, Expected::SMALLER == visit(expected.treatment, amalgamated));
  } catch (Exception::Invariant const &) {
    impossible(ASSERTION);
  }
  auto Fixture::test_reassembly_good() -> void {
    using Provided = Fixture::Provided::Reassembly;
    using Expected = Fixture::Expected::Reassembly;
    auto expected = Expected{};
    //
    auto parameters = Configuration::Parameters{};
    auto aggregations = []{
      auto shard = Configuration::Aggregation<SHARE>{Provided::CANARY};
      return Shards<Configuration::Aggregation<SHARE>>{shard, shard};
    }();
    auto const processed = Configuration::Processed{1234};
    auto reassembled = library::reassembly(parameters, aggregations, processed);
    //
    require(ASSERTION, Expected::CANARY == visit(expected.treatment, reassembled));
  }
}
#endiv

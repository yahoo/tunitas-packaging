#divert <fpp>
#import tunitas.keyston.daf.numeric.constant
namespace tests::unit::daf::numeric::constant {
  class Fixture;
  namespace library = ::tunitas::keyston::daf::numeric::constant;
}
#endiv
#divert <hpp>
#import tunitas.exception.feature.Invariant
struct tests::unit::daf::numeric::constant::Fixture : public rigging::suite::Fixture {
  static auto suite() -> Suite;
  //
  auto test_disassembly() -> void;
  auto test_computation() -> void;
  auto test_amalgamation() -> void;
  auto test_reassembly() -> void;
protected:
  struct Exception {
    using Invariant = ::tunitas::exception::feature::Invariant;
  };
  struct Observed {
    inline static constexpr auto CANARY = Specimen{99};
  };
  struct Numeric {
    inline static constexpr auto CANARY = (int signed long long) underlying(Observed::CANARY); // [[FIXTHIS]] bignums are signed, but measurement::Specimen isn't
    inline static constexpr auto ZERO = 0ll;
  };
  struct Derived {
    inline static constexpr auto CANARY = Result{99};
  };
};
#endiv
#divert <cpp>
auto tests::unit::daf::numeric::constant::Fixture::suite() -> Suite {
  auto series = Stream{"constant"sv};
  series << add("disassembly", &Fixture::test_disassembly)
         << add("computation", &Fixture::test_computation)
         << add("amalgamation", &Fixture::test_amalgamation)
         << add("reassembly", &Fixture::test_reassembly)
         << END;
  return settle(series);
}
namespace tests::unit::daf::numeric::constant {
  auto Fixture::test_disassembly() -> void {
    auto parameters = Configuration::Parameters{};
    auto measurement = Configuration::Measurement<WHOLE>{Observed::CANARY};
    auto randomness = Configuration::Randomness{};
    auto [publick, inputs] = library::disassembly(parameters, measurement, randomness);
    require(ASSERTION, sizeof(publick)); // don't are what it is
    // Because this is what the constants algo does on disassembly
    require(ASSERTION, Numeric::CANARY == inputs.at(0_shard).value);
    require(ASSERTION, Numeric::ZERO == inputs.at(1_shard).value);
  }
  auto Fixture::test_computation() -> void {
    auto parameters = Configuration::Parameters{};
    auto publick = Configuration::Public<SHARE>{};
    auto input = Configuration::Input<SHARE>{Numeric::CANARY};
    auto output = library::computation(parameters, 0_shard, publick, input);
    require(ASSERTION, output.value == input.value);
  }
  auto Fixture::test_amalgamation() -> void {
    using O = Configuration::Output<SHARE>;
    auto parameters = Configuration::Parameters{};
    {
      auto outputs = Series<Configuration::Output<SHARE>>{};
      auto amalgamated = library::amalgamation(parameters, outputs);
      require(ASSERTION, Numeric::ZERO == amalgamated.value);
    } {
      auto outputs = Series<Configuration::Output<SHARE>>{O{Numeric::CANARY},O{Numeric::CANARY},O{Numeric::CANARY}};
      auto amalgamated = library::amalgamation(parameters, outputs);
      require(ASSERTION, Numeric::CANARY == amalgamated.value);
    }
    try {
      auto outputs = Series<Configuration::Output<SHARE>>{O{Numeric::CANARY},O{Numeric::ZERO},O{Numeric::CANARY}};
      library::amalgamation(parameters, outputs);
      impossible(ASSERTION);
    } catch (Exception::Invariant const &) {
      require(ASSERTION);
    }
  }
  auto Fixture::test_reassembly() -> void {
    auto parameters = Configuration::Parameters{};
    using A = Configuration::Aggregation<SHARE>;
    auto aggregations = Shards<Configuration::Aggregation<SHARE>>{A{Numeric::CANARY}, A{Numeric::ZERO}};
    auto count = Count{1234};
    auto reassembled = library::reassembly(parameters, aggregations, count);
    require(ASSERTION, Derived::CANARY == reassembled.value);
  }
}
#endiv

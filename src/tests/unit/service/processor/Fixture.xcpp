  auto Fixture::test_usage_Processor() -> void {
#if 1
    auto exercise = [](auto &world) {
      // nothing to do but watch it shut down
      require(ASSERTION);
    };
    operate<Supervisor<library::Processor>>(exercise, SPECIES);
#else
    auto super = supervise<library::Processor>(SPECIES);
    super.stop();
    require(ASSERTION);
#endif
  }
  auto Fixture::test_usage_Boot() -> void {
#if 1
    // This is somewhat pedantic and specious because Processor already runs Boot, Initialization & Continuation
    // The new subprocess MUST be pushed into the subprocesses list; it CANNOT be left floating.
    // The subprocess MUST get notified on shutdown as the top-level process terminates from graceful_shutdown.
    auto exercise = [](auto &world) {
      auto &ref{world.ref()};
      ref.subprocesses.spawn(sublibrary::make<sublibrary::Boot>(ref));
      require(ASSERTION);
    };
    operate<Supervisor<library::Processor>>(exercise, SPECIES);
#else
    auto super = supervise<library::Processor>(SPECIES);
    auto &ref{super.ref()};
    ref.subprocesses.spawn(sublibrary::make<sublibrary::Boot>(ref));
    super.stop();
    require(ASSERTION);
#endif
  }

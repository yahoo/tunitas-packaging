struct tests::unit::service::client::Fixture : public rigging::suite::Fixture, protected partial::Controllability {
  static auto suite() -> Suite;
  //
  auto test_usage_Client() -> void;
  auto test_usage_Boot() -> void;
  auto test_usage_Measure() -> void;
protected:
  inline static constexpr auto const SPECIES = ::tunitas::denniston::role::make_client_species(99);
};
#endiv
#divert <cpp>
auto tests::unit::service::client::Fixture::suite() -> Suite {
  auto series = Stream{"client"sv};
  series << []{
              auto use = Stream{"usage"sv};
              use << add("Client", &Fixture::test_usage_Client)
                  << add("Boot", &Fixture::test_usage_Boot)
                  << add("Measure", &Fixture::test_usage_Measure)
                  << END;
              return use;
            }()
         << END;
  return settle(series);
}
#import tunitas.denniston.service.client.Client
#import tunitas.denniston.service.client.subprocess.Boot
#import tunitas.denniston.service.client.subprocess.Measure
#import tunitas.denniston.service.client.subprocess.make
#import tunitas.denniston.task.Definition
namespace tests::unit::service::client {
  auto Fixture::test_usage_Client() -> void {
    auto super = supervise<library::Client>(SPECIES);
    super.stop();
    require(ASSERTION);
  }
  auto Fixture::test_usage_Boot() -> void {
    auto super = supervise<library::Client>(SPECIES);
    // This is somewhat pedantic and specious because the Client already runs Boot & Measure
    // The new subprocess MUST be pushed into the subprocesses list; it CANNOT be left floating.
    // The subprocess MUST get notified on catchup() as the top-level process terminates from graceful_shutdown.
    // [[ahem, turns out for this particular case it seems to work out either way, because run never exits]]
    auto &ref{super.ref()};
    ref.subprocesses.spawn(sublibrary::make<sublibrary::Boot>(ref));
    super.stop();
    require(ASSERTION);
  }
  auto Fixture::test_usage_Measure() -> void {
    auto super = supervise<library::Client>(SPECIES);
    // Eadem ratione.
    auto &ref{super.ref()};
    auto definition = ::tunitas::denniston::task::Definition{};
    ref.subprocesses.spawn(sublibrary::make<sublibrary::Measure>(ref, definition));
    super.stop();
    require(ASSERTION);
  }
}
#endiv

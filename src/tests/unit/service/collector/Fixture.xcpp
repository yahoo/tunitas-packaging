namespace tests::unit::service::collector {
  auto Fixture::test_usage_Collector() -> void {
    auto super = supervise<library::Collector>();
    super.stop();
    require(ASSERTION);
  }
  auto Fixture::test_usage_Boot() -> void {
    auto super = supervise<library::Collector>();
    // This is somewhat pedantic and specious because the Collector already runs Boot & Measure
    // The new subprocess MUST be pushed into the subprocesses list; it CANNOT be left floating.
    // The subprocess MUST get notified on catchup() as the top-level process terminates from graceful_shutdown.
    auto &ref{super.ref()};
    ref.subprocesses.spawn(sublibrary::make<sublibrary::Boot>(ref));
    super.stop();
    require(ASSERTION);
  }
  auto Fixture::test_usage_Measure() -> void {
    auto super = supervise<library::Collector>();
    // Eadem ratione.
    auto &ref{super.ref()};
    auto identifier = ::tunitas::keyston::protocol::id::Task{};
    ref.subprocesses.spawn(sublibrary::make<sublibrary::Measure>(ref, identifier));
    super.stop();
    require(ASSERTION);
  }

#import tunitas.denniston.service.collector.Collector
#import tunitas.denniston.service.collector.subprocess.Boot
#import tunitas.denniston.service.collector.subprocess.Measure
#import tunitas.denniston.service.collector.subprocess.make
#import tunitas.rheem.protocol.id
#import tests.unit.service.Supervisor
namespace tests::unit::service::collector {
  auto Fixture::test_usage_Collector() -> void {
#if 1
    auto exercise = [](auto &world) {
      // nothing to do but watch it shut down
      require(ASSERTION);
    };
    operate<Supervisor<library::Collector>>(exercise);
#else
    auto super = supervise<library::Collector>();
    super.stop();
    require(ASSERTION);
#endif
  }
  auto Fixture::test_usage_Boot() -> void {
#if 1
    // This is somewhat pedantic and specious because the Collector already runs Boot & Measure
    // The new subprocess MUST be pushed into the subprocesses list; it CANNOT be left floating.
    // The subprocess MUST get notified on shutdown as the top-level process terminates from graceful_shutdown.
    auto exercise = [](auto &world) {
      auto &ref{world.ref()};
      ref.subprocesses.spawn(sublibrary::make<sublibrary::Boot>(ref));
      require(ASSERTION);
    };
    operate<Supervisor<library::Collector>>(exercise);
#else
    auto super = supervise<library::Collector>();
    auto &ref{super.ref()};
    ref.subprocesses.spawn(sublibrary::make<sublibrary::Boot>(ref));
    super.stop();
    require(ASSERTION);
#endif
  }
  auto Fixture::test_usage_Measure() -> void {
#if 1
    // Eadem ratione.
    auto exercise = [](auto &world) {
      auto &ref{world.ref()};
      auto identifier = ::tunitas::rheem::protocol::id::Task{};
      ref.subprocesses.spawn(sublibrary::make<sublibrary::Measure>(ref, identifier));
      require(ASSERTION);
    };
    operate<Supervisor<library::Collector>>(exercise);
#else
    auto super = supervise<library::Collector>();
    auto &ref{super.ref()};
    auto identifier = ::tunitas::rheem::protocol::id::Task{};
    ref.subprocesses.spawn(sublibrary::make<sublibrary::Measure>(ref, identifier));
    super.stop();
    require(ASSERTION);
#endif
  }
}
#endiv

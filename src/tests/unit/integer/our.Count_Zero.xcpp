#import std.make_index_sequence
#import std.index_sequence
#import std.to_string
auto tests::unit::integer::our::count_zero::Count_Zero::suite() -> Suite {
  auto series = Stream{"count_zero"sv};
  series << []{
             auto use = Stream{"usage"sv};
             [&use]<Size... INDEX>(std::index_sequence<INDEX...>) {
               ((use << add(std::to_string(INDEX), &Count_Zero::test_usage<INDEX>)), ... );
             }(std::make_index_sequence<COUNT>{});
             return use;
           }()
         << END;
  return settle(series);
}

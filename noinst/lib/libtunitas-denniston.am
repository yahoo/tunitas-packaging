noinst_lib_libtunitas_denniston_la_CPPFLAGS = $(PACKAGE_CPPFLAGS_SET)
noinst_lib_libtunitas_denniston_la_CXXFLAGS = $(PACKAGE_CXXFLAGS_SET)
noinst_lib_libtunitas_denniston_la_LDFLAGS = $(PACKAGE_LDFLAGS_SET)
# [[FIXTHIS]] - -ltunitas-app is required here because tunitas::denniston::Version uses it
# [[FIXTHIS]] - need a way to provide tunitas that doesn't need the TXUI of -ltunitas-app
noinst_lib_libtunitas_denniston_la_LIBADD = \
  noinst/lib/libautotools-autoconf+tunitas-denniston.la \
  noinst/lib/libaddenda+nonstd.la \
  noinst/lib/libfmt+tunitas-denniston.la \
  noinst/lib/libtunitas-keyston+tunitas-denniston.la \
  noinst/lib/libstd+tunitas-denniston.la \
  noinst/lib/libnonstd+tunitas-denniston.la \
  noinst/lib/libwant.la \
  -ltunitas-keyston -ltunitas-app -ltunitas \
  -lfmt -lsys++-posix -lsys++ -lnonstd++ \
  $(end)
noinst_lib_libtunitas_denniston_la_MODULES = $(call TF_SOURCEStoMODULES, $(noinst_lib_libtunitas_denniston_la_SOURCES))
noinst_lib_libtunitas_denniston_la_SOURCES = $(tunitas_denniston_SUBSOURCES)
include src/tunitas/denniston/Makefrag.am
$(noinst_lib_libtunitas_denniston_la_SOURCES) : obj/src/%.cpp : src/%.xcpp
	$(TF_V_DIS) $(call TF_XCPP2CPP, $<)
	$(TF_V_DONE) test -e $@
$(tf_noinst_mkdir)/libtunitas-denniston.mk: $(noinst_lib_libtunitas_denniston_la_SOURCES)
$(tf_noinst_mkdir)/libtunitas-denniston.mk:
	$(TF_V_DEP) $(call TF_DEPENDENCIES, $^)
	$(TF_V_DONE) test -e $@
include $(tf_noinst_mkdir)/libtunitas-denniston.mk
clean-dependencies:: ; rm -f $(tf_noinst_mkdir)/libtunitas-denniston.mk
